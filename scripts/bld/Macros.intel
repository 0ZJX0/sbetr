LKFLAG = -O2 -o
FCPFLAG = -r8 -c -cpp

CPPDEFS+=  -DCPRGNU -DHIDE_MPI
F90 = $(FCOMP) $(CPPDEFS)
NETCDF_PATH = /opt/local
LAPACK_DIR = /global/software/sl-6.x86_64/modules/intel/2013_sp1.4.211/lapack/3.5.0-intel
NETCDFLIB    =-L$(NETCDF_PATH)/lib -lnetcdff
LAPACK_LIB   =-L$(LAPACK_DIR)/lib -llapack -lblas
NETCDFINC    =-I$(NETCDF_PATH)/include


INCS = $(NETCDFINC)
LIBS = $(NETCDFLIB) $(LAPACK_LIB)

FFLAGS = $(FFLAGS_IN) $(LKFLAG)

F90C=$(F90) $(FCPFLAG) $(INCS)
F90L=$(F90) $(LIBS) $(FFLAGS)
